<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lee.setstatusbarclolor"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        >
        <activity
            android:name=".MainActivity"
            android:theme="@style/BaseAppTheme_NotActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Example1Activity"
            android:theme="@style/AppTheme_NotActionBar"
            >
        </activity>
        <activity
            android:name=".Example2Activity"
            android:theme="@style/AppTheme_ActionBar"
            >
        </activity>

    </application>


</manifest>
